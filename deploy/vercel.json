{
  "version": 2,
  "name": "oracle-philosophy-system",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.9",
    "ADMIN_PASSWORD": "@oracle-admin-password",
    "SECRET_KEY": "@oracle-secret-key"
  },
  "build": {
    "env": {
      "VITE_API_URL": "https://oracle-philosophy-system.vercel.app/api"
    }
  },
  "functions": {
    "backend/app.py": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "regions": ["fra1"],
  "public": false
}